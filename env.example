# Environment variables for DistriSchool Frontend Development
# Copy this file to .env and fill in your actual values

# Azure Container Registry (ACR) Configuration
ACR_REGISTRY=your-acr-registry.azurecr.io

# Auth0 Configuration (OAuth2)
AUTH0_ENABLED=true
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=your-auth0-audience
AUTH0_CONNECTION=Username-Password-Authentication

# CORS Configuration
ALLOWED_ORIGINS=http://192.168.1.7:3000,http://192.168.1.7:5173,http://192.168.1.7:8080

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=30
PASSWORD_RESET_TOKEN_EXPIRATION=2
EMAIL_VERIFICATION_TOKEN_EXPIRATION=24

# Frontend Configuration - Service URLs
# Auth Service
NEXT_PUBLIC_API_URL=http://192.168.1.7:8080
NEXT_PUBLIC_AUTH_SERVICE_URL=http://192.168.1.7:8080/api/v1/auth

# Student Management Service
NEXT_PUBLIC_STUDENT_SERVICE_URL=http://192.168.1.7:8081

# Teacher Management Service
NEXT_PUBLIC_TEACHER_SERVICE_URL=http://192.168.1.7:8082

# Grade Management Service
NEXT_PUBLIC_GRADES_API_URL=http://192.168.1.7:8083

# Schedule Management Service (also handles Classes, Subjects, Attendance)
NEXT_PUBLIC_CLASSES_API_URL=http://192.168.1.7:8084
