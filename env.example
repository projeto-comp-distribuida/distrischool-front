# Environment variables for DistriSchool Frontend Development
# Copy this file to .env and fill in your actual values

# Azure Container Registry (ACR) Configuration
ACR_REGISTRY=your-acr-registry.azurecr.io

# Auth0 Configuration (OAuth2)
AUTH0_ENABLED=true
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=your-auth0-audience
AUTH0_CONNECTION=Username-Password-Authentication

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=30
PASSWORD_RESET_TOKEN_EXPIRATION=2
EMAIL_VERIFICATION_TOKEN_EXPIRATION=24

# Frontend Configuration - Now using API Gateway
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:8080/api/auth
NEXT_PUBLIC_STUDENT_SERVICE_URL=http://localhost:8080/api/students
NEXT_PUBLIC_TEACHER_SERVICE_URL=http://localhost:8080/api/teachers
